#include<stdio.h>
#include<conio.h>
main()
{
long k,c,a,n;
char kl;
do
{
clrscr();
printf("\nEnter the number to find its factorial: ");
scanf("%ld",&n);
c=1;
a=1;
while(c<=n)
{
a=a*c;
c=c+1;
}
printf("\n%ld",a);
printf("\nDo You Want To Run The Program Again (Y/N): ");
kl=getch();
}
while(kl=='y'|| kl=='Y');
exit(0);
