#include<stdio.h>
#include<conio.h>
main()
{
int n,x,flag=0,i,j,nr,de;
float ans;
clrscr();
printf("\nEnter The nTh Term:  ");
scanf("%d",&n);
printf("\nEnter the value of x : ");
scanf("%d",&x);
////////////////////////////////////////////////////////////////////////////
ans=0;
for(i=1;i<=n;i=i+2)
{
////////////////////////////////////////////////////////////////////////////
	nr=1;
	for(j=1;j<=i;j++)
	nr=nr*x;
////////////////////////////////////////////////////////////////////////////
  de=1;
  for(j=i;j>=1;j--)
  de=de*j;
////////////////////////////////////////////////////////////////////////////
  if(flag==0)
  {
  ans=ans+(float)nr/de;
  flag=1;
  }
  else
  {
  ans=ans-(float)nr/de;
  flag=0;
  }
  printf("\%f",ans);
  }
////////////////////////////////////////////////////////////////////////////
  getch();
  return(0);
  }